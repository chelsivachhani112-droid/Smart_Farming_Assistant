# ===== SERVER CONFIGURATION =====
NODE_ENV=development
PORT=5000

# ===== DATABASE =====
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart-farming

# ===== JWT AUTHENTICATION =====
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# ===== WEATHER API =====
# Get free API key from: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_api_key

# ===== EMAIL SERVICE =====
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# ===== PAYMENT GATEWAY (Optional) =====
# Razorpay: https://razorpay.com
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe: https://stripe.com
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# ===== AI/ML SERVICES =====
# OpenAI for Chatbot: https://openai.com
OPENAI_API_KEY=your_openai_api_key

# Google Cloud Vision for Image Analysis: https://cloud.google.com/vision
GOOGLE_CLOUD_PROJECT_ID=your_google_project_id
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key

# ===== LOCATION & MAPS =====
# Google Maps API: https://developers.google.com/maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===== STORAGE (Optional) =====
# AWS S3 for file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=ap-south-1

# ===== NOTIFICATION SERVICES =====
# Twilio for SMS: https://www.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase for Push Notifications: https://firebase.google.com
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# ===== MARKET DATA APIs =====
# For real-time market prices
MARKET_DATA_API_KEY=your_market_data_api_key

# ===== GOVERNMENT SCHEMES API =====
# For government scheme information
GOV_SCHEMES_API_KEY=your_gov_schemes_api_key

# ===== LOGGING & MONITORING =====
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# ===== CORS & SECURITY =====
CORS_ORIGIN=http://localhost:3000,https://smartfarming2024.netlify.app
